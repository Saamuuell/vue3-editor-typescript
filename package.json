{
  "name": "vue3-editor-typescript",
  "version": "1.1.1",
  "description": "HTML editor using Vue.js 3, and Quill.js, an open source editor",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly",
    "generate:types": "vue-tsc --noEmit && vite build",
    "lint": "vue-cli-service lint"
  },
  "main": "./dist/vue3-editor.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/vue3-editor.mjs",
      "require": "./dist/vue3-editor.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./css" : "./dist/style.css"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.0.2",
    "core-js": "^3.6.5",
    "quill": "^2.0.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "axios": "^0.20.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0-0",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vue": "^3.3.0",
    "vue-tsc": "^2.0.22"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "keywords": [
    "vue",
    "vue-component",
    "quill",
    "html editor",
    "text editor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SamuelCottarel/vue3-editor.git"
  }
}
